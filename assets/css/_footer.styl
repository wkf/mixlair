blue-bg()
  background: linear-gradient(top, #0d2147, 51% #0d294e, 52% #0d2147, 100% #0d294e)
  box-shadow: inset 0 0 8px rgba(#fff, .1), inset 0 2px 3px rgba(#000,.7), 0 1px 0 rgba(#fff,.14)
  round: 5px
  float: left
  padding: 11px 20px 5px 20px

control-button(img)
  background: url(s('%s%s', unquote(img-path), unquote(img))) center center no-repeat, -webkit-linear-gradient(top, #e9eaee 0%, #fefeff 100%)
  padding: 9px 14px
  box-shadow: inset 0 -2px rgba(#000,.1), 0 0 7px rgba(#000,.7)
  inline-block()
  cursor: pointer

footer
  background: #1c1f22
  box-shadow inset 0 1px 0 rgba(255,255,255,.05)
  background linear-gradient(bottom, #15181b 0%, #1d1f23 100%)
  absolute: bottom
  width: 100%
  group()

  .contain
    size: 785 65
    padding: 20px 0
    margin: 0 auto

#time-tempo
  group()
  float: left

  .time
    blue-bg()

  .tempo
    blue-bg()

  .label
    color: #1b3f68
    upcase()
    bold()
    fs: .75em

  .count
    color: #93baf1
    font-family: 'digital-7'
    fs: 2.4em

#control-buttons
  bg: 'ui/play_area_bg@2x.png'
  background-size: 262px 82px
  size: 262px 82px
  group()
  float: left
  margin: -10px 30px 0 45px

  & > div
    float: left

  .beginning, .rewind, .ffwd, .end
    round: 2px
    margin: 34px 5px 0 0

  .beginning
    control-button('ui/single_rewind@2x.png')
    background-size: 6px 9px, 100%
    margin-left: 8px

  .end
    control-button('ui/single_forward@2x.png')
    background-size: 6px 9px, 100%

  .rewind
    control-button('ui/rewind@2x.png')
    background-size: 12px 9px, 100%

  .ffwd
    control-button('ui/forward@2x.png')
    background-size: 12px 9px, 100%

  .play
    background: url(s('%s%s', unquote(img-path), unquote('ui/play@2x.png'))) 58% 50% no-repeat, -webkit-linear-gradient(top, #e9eaee 0%, #fefeff 100%), url("img")
    padding: 18px
    round: 50%
    background-size: 14px 17px, 100%
    box-shadow: inset 0 -10px 5px rgba(#000,.23), 0 0 7px rgba(#000,.7)
    inline-block()
    cursor: pointer
    margin: 22px 5px 0 5px

  .record
    background: url(s('%s%s', unquote(img-path), unquote('ui/record_led@2x.png'))) 50% 50% no-repeat, -webkit-linear-gradient(top, #e9eaee 0%, #fefeff 100%), url("img")
    padding: 29px
    round: 50%
    background-size: 38px 38px, 100%
    box-shadow: inset 0 -10px 5px rgba(#000,.23), 0 0 7px rgba(#000,.7)
    inline-block()
    cursor: pointer
    margin: 11px 12px 0 4px

#playback-volume
  float: right
  size: 150 30
  background: #131719
  rounded()
  position: relative
  box-shadow: inset 0 1px 4px rgba(#000,.6)
  margin-top: 15px

  .ui-slider-handle
    size: 30px
    gradient: #fff #8d979f
    display: block
    position: absolute
    margin-left: -15px
    rounded()
    box-shadow: 0 3px 5px rgba(#000,.5)
