blue-bg()
  background: linear-gradient(top, #0d2147, 51% #0d294e, 52% #0d2147, 100% #0d294e)
  box-shadow: inset 0 0 8px rgba(#fff, .1), inset 0 2px 3px rgba(#000,.7), 0 1px 0 rgba(#fff,.14)
  round: 5px
  float: left
  padding: 11px 20px 5px 20px

control-button(img)
  background-image: url(s('%s%s', unquote(img-path), unquote(img))), -webkit-linear-gradient(top, #e9eaee 0%, #fefeff 100%)
  background-position: center center
  background-repeat: no-repeat
  padding: 9px 14px
  box-shadow: inset 0 -2px rgba(#000,.1), 0 0 7px rgba(#000,.7)
  inline-block()
  cursor: pointer

  &:hover
    background-image: url(s('%s%s', unquote(img-path), unquote(img))), -webkit-linear-gradient(top, #ccc 0%, #9c9c9c 100%)

footer
  background: #1c1f22
  box-shadow inset 0 1px 0 rgba(255,255,255,.05)
  background linear-gradient(bottom, #15181b 0%, #1d1f23 100%)
  fixed: bottom
  width: 100%
  group()
  z-index: 200

  .contain
    size: 785 65
    padding: 20px 0
    margin: 0 auto

#time-tempo
  group()
  float: left
  -webkit-user-select: none

  &:active
    cursor: ew-resize

  .time
    blue-bg()
    margin-right: 3px
    width: 120px

  .tempo
    blue-bg()
    cursor: ew-resize
    width: 105px
    box-sizing: border-box

    .metronome
      size: 17 23
      bg: 'ui/metronome_holder@2x.png'
      background-size: 17px 23px
      float: right
      margin-top: 8px

      .ticker
        bg: 'ui/metronome_ticker@2x.png'
        size: 2px 25px
        background-size: 2px 25px
        margin-left: 7px
        margin-top: -5px
        transform-origin: 0 25px

    .count
      float: left

    &:active
      cursor: ew-resize

    &:hover
      background: linear-gradient(top, lighten(#0d2147, 2%), 51% lighten(#0d294e, 2%), 52% lighten(#0d2147, 2%), 100% lighten(#0d294e, 2%))

  .label
    color: #1b3f68
    upcase()
    bold()
    fs: .75em

  .count
    color: #93baf1
    font-family: 'digital-7'
    fs: 2.4em

#control-buttons
  bg: 'ui/play_area_bg@2x.png'
  background-size: 262px 82px
  size: 262px 82px
  group()
  float: left
  margin: -10px 30px 0 45px

  & > div
    float: left

  .beginning, .rewind, .ffwd, .end
    round: 2px
    margin: 34px 5px 0 0

  .beginning
    control-button('ui/single_rewind@2x.png')
    background-size: 6px 9px, 100%
    margin-left: 8px

  .end
    control-button('ui/single_forward@2x.png')
    background-size: 6px 9px, 100%

  .rewind
    control-button('ui/rewind@2x.png')
    background-size: 12px 9px, 100%

  .ffwd
    control-button('ui/forward@2x.png')
    background-size: 12px 9px, 100%

  .play
    background-image: url(s('%s%s', unquote(img-path), unquote('ui/play@2x.png'))), -webkit-linear-gradient(top, #e9eaee 0%, #fefeff 100%), url("img")
    background-position: 58% 50%
    background-repeat: no-repeat
    background-size: 14px 17px, 100%
    padding: 18px
    round: 50%
    box-shadow: inset 0 -10px 5px rgba(#000,.23), 0 0 7px rgba(#000,.7)
    inline-block()
    cursor: pointer
    margin: 22px 5px 0 5px

    &:hover
      background-image: url(s('%s%s', unquote(img-path), unquote('ui/play@2x.png'))), -webkit-linear-gradient(top, #ccc 0%, #9c9c9c 100%)

    &.playing
      background-image: url(s('%s%s', unquote(img-path), unquote('ui/pause@2x.png'))), -webkit-linear-gradient(top, #e9eaee 0%, #fefeff 100%), url("img")
      background-position: 50% 50%

      &:hover
        background-image: url(s('%s%s', unquote(img-path), unquote('ui/pause@2x.png'))), -webkit-linear-gradient(top, #ccc 0%, #9c9c9c 100%)

  .record
    background-image: url(s('%s%s', unquote(img-path), unquote('ui/record_led@2x.png'))) , -webkit-linear-gradient(top, #e9eaee 0%, #fefeff 100%), url("img")
    background-position: 50% 50%
    background-repeat: no-repeat
    background-size: 38px 38px, 100%
    padding: 29px
    round: 50%
    box-shadow: inset 0 -10px 5px rgba(#000,.23), 0 0 7px rgba(#000,.7)
    inline-block()
    cursor: pointer
    margin: 11px 12px 0 4px

    &:hover
      background-image: url(s('%s%s', unquote(img-path), unquote('ui/record_led@2x.png'))), -webkit-linear-gradient(top, #ccc 0%, #9c9c9c 100%)

#playback-volume
  float: right
  size: 150 30
  background: #131719 url('/img/ui/vol_faded_row@2x.png') center center no-repeat
  background-size: 122px 25px
  rounded()
  position: relative
  box-shadow: inset 0 1px 4px rgba(#000,.6)
  margin-top: 15px

  .ui-slider-handle
    size: 30px
    gradient: #fff #8d979f
    display: block
    position: absolute
    margin-left: -15px
    rounded()
    box-shadow: 0 3px 5px rgba(#000,.5)

  .alt
    height: 30px
    width: 65%
    background: url('/img/ui/vol_color_row@2x.png') no-repeat
    background-size: 122px 25px
    absolute: top 3px left 14px

@keyframes swang
  25%
    transform: rotate(25deg)
  75%
    transform: rotate(-25deg)
  100%
    transform: rotate(0deg)