.track
  position: relative
  clear: both
  height: 80px
  box-shadow: 0px 1px 0px #292c30
  border-bottom: solid 1px #1c1e21
  cursor: pointer
  > *
    box-sizing: border-box
  .info
    padding: 15px
    background: #23262a
    width: 360px
    height: 100%
  .track-title
    font-size: 16px
    font-weight: 500
    color: #a0a9b4
  .waveform
    position: absolute
    left: 370px
    height: 90%
    top: 5%
  .region
    border-radius 8px
    background-clip padding-box
    background-color #0f1013
    box-shadow 0 1px 0 rgba(255,255,255,.04)
    position: relative
    gradient: #4d5359 #373a41
    height: 100%
    position: absolute
    width: 200px
  &.active .region
    gradient #e04737, #cb301f
  .title
    border-radius 8px
    position: absolute
    top: 5px
    left: 5px
    padding: 4px
    font-size: 10px
    background: #1d2023
