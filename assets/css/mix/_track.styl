.track
  position: relative
  clear: both
  height: 80px
  box-shadow: 0px 1px 0px #292c30
  border-bottom: solid 1px #1c1e21
  cursor: pointer

  svg rect
    fill rgba(255, 255, 255, 0.5)
  > *
    box-sizing: border-box

  .info
    padding: 15px
    background: #23262a
    width: 300px
    height: 80px
    fixed: left
    z-index: 100
    border-top: 1px solid #292c30
    box-shadow: 3px 0 3px rgba(#000,.2)

  &.active .info
    background: lighten(#23262a, 5%)

  .track-title
    font-size: 16px
    font-weight: 500
    color: #a0a9b4

  .waveform
    position: absolute
    left: 310px
    height: 90%
    top: 5%

  .region
    border-radius 8px
    background-clip padding-box
    background-color #0f1013
    box-shadow 0 1px 0 rgba(255,255,255,.04)
    position: relative
    gradient: #4d5359 #373a41
    height: 100%
    position: absolute

  &.active .region
    gradient #e04737, #cb301f

  .title
    border-radius 8px
    position: absolute
    top: 5px
    left: 5px
    padding: 4px
    font-size: 10px
    background: #1d2023

  .gain-control
    background: #1e1e20 url('/img/ui/vol_single_row_faded@2x.png') no-repeat
    background-size: 100px 14px
    size: 100 12
    rounded()
    box-shadow: inset 0 2px 5px rgba(#000,.3)
    background-position: 0 -1px
    position: relative
    margin-top: 27px
    float: left

    .alt
      background: url('/img/ui/vol_single_row_color@2x.png') no-repeat
      height: 12px
      absolute: top
      background-size: 100px 12px
      width: 100%
      rounded()

    .ui-slider-handle
      size: 14px
      gradient: #fafbfb #a1a9b1
      box-shadow: 0 1px 3px rgba(#000,.8)
      display: block
      rounded()
      margin-top: -1px
      position: absolute
      margin-left: -7px

  .track-buttons
    box-shadow: 0 1px 2px rgba(#000,.2)
    group()
    float: right
    margin-top: 40px

    & > div
      border: 1px solid #1b1c1f
      padding: 9px 15px
      float: left
      cursor: pointer
      background-position: center center
      background-repeat: no-repeat

    & > div:first-child
      border-radius: 2px 0 0 2px

    & > div:last-child
      border-radius: 0 2px 2px 0

    .fx
      background-image: url('/img/ui/fx@2x.png'), linear-gradient(top, #26292d, #222528)
      background-size: 11px 12px, 100%

      &:hover
        background-image: url('/img/ui/fx@2x.png'), linear-gradient(top, lighten(#26292d, 3%), lighten(#222528, 3%))

      &.active
        background-image: url('/img/ui/fx@2x.png'), linear-gradient(top, #6bb4fc, #2984e1)
        border-color: darken(#2984e1, 30%)

    .mute
      background-image: url('/img/ui/mute@2x.png'), linear-gradient(top, #26292d, #222528)
      background-size: 12px 13px, 100%

      &:hover
        background-image: url('/img/ui/mute@2x.png'), linear-gradient(top, lighten(#26292d, 3%), lighten(#222528, 3%))

      &.active
        background-image: url('/img/ui/mute@2x.png'), linear-gradient(top, #6bb4fc, #2984e1)
        border-color: darken(#2984e1, 30%)

    .solo
      background-image: url('/img/ui/play_solo@2x.png'), linear-gradient(top, #26292d, #222528)
      background-size: 14px 12px, 100%

      &:hover
        background-image: url('/img/ui/play_solo@2x.png'), linear-gradient(top, lighten(#26292d, 3%), lighten(#222528, 3%))

      &.active
        background-image: url('/img/ui/play_solo@2x.png'), linear-gradient(top, #6bb4fc, #2984e1)
        border-color: darken(#2984e1, 30%)

