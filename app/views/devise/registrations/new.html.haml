.wrapper
  .logo
    .sign-up-errors
      - resource.errors.each do |k, v|
        .error=k.to_s + " " + v.to_s
    %h1 sign up - mixlair.
  =form_for resource, as: resource_name, url: registration_path(resource_name) do |f|
    .highlight
      .tag.user_icon
      = f.email_field :email, :autofocus => true, placeholder: "email", class: "username"
    .highlight
      .tag.pass_icon
      = f.password_field :password, class: "password", placeholder: "enter password"
    .highlight
      .tag.pass_icon
      = f.password_field :password_confirmation, class: "password", placeholder: "confirm password"

    =f.submit "Sign In"

= render "devise/shared/links"
