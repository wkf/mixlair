body
  background-color: #1d2023;
  .wrapper
    width 270px
    margin 0 auto
    font-family: Roboto, Helvetica, sans-serif
    .logo
      padding 100px 0 20px 0
      text-align center
      font-weight 700
      h1
        font-size 15px
        color #FFF
    .highlight
      position: relative;
      .tag
        position: absolute;
        width 39px
        height 34px
        round(2px 0 0 2px)
        background-clip padding-box
        background-color #36d6ef
        box-shadow 0 1px 0 rgba(255,255,255,.04), inset 0 1px 1px rgba(0,0,0,.25)
        transition(background-size 200ms ease-in)
        &:after
          width 0
          height 0
          border 5px solid transparent
          border-left-color #36d6ef
          position absolute
          content " "
          z-index 10
          right -9px
          top 12px
        &.user_icon
          background: url('login/login_user@2x.png') no-repeat center center #36d6ef
          background-size 30%
        &.pass_icon
          background: url('login/login_pass@2x.png') no-repeat center center #36d6ef
          background-size 30%
    input
      round(2px)
      border none
      width 100%
      height 34px
      line-height 34px
      background-clip padding-box
      padding 0 0 0 50px
      box-sizing border-box
      background-color #16181b
      box-shadow 0 1px 0 rgba(255,255,255,.04), inset 0 1px 1px rgba(0,0,0,.25)
      margin-bottom 15px
      outline none
      color #FFF
      transition(box-shadow 500ms, background-color 500ms)
      &:hover
        background-color #15171a
      &:focus
        background-color #15171a
        box-shadow 0 1px 0 rgba(255,255,255,.04), inset 0 2px 1px rgba(0,0,0,.13)
      &::-webkit-input-placeholder
        color #31373e
    input[type="submit"]
      font-family "Roboto", sans-serif
      width 100%
      padding 0;
      font-size 16px
      margin-top 15px
      height 43px
      color #39424c
      font-weight 700
      border 1px solid #000
      round(3px)
      background-clip padding-box
      background-color #16181b
      box-shadow 0 1px 4px rgba(0,0,0,.14), inset 0 1px 1px #fff
      background linear-gradient(bottom, #9da6af 0%, #c8cdd8 24%, #fff 100%)
      &:hover
        box-shadow 0 2px 3px rgba(0,0,0,.25), inset 0 1px 1px #fff
        background linear-gradient(bottom, #9da6af 0%, #d6dce7 24%, #fff 100%)
      &:active
        box-shadow 0 1px 2px rgba(255,255,255,.1), inset 0 1px 1px rgba(30,34,38,.75)
        background linear-gradient(bottom, #d7dfe8 0%, #c8cdd8 75%, #9da6af 100%)
        padding-top 2px
    .inset_sep
      margin 10px 0 30px 0
      width 100%
      height 1px
      background-color #16181b
      box-shadow 0 1px 0 rgba(115,115,115,.09)

    .social_login
      ul
        li
          &:first-child
            margin-bottom 10px
          a
            text-decoration none
            line-height 44px
            color #FFF
            text-align center
            font-size 14px
            font-weight 700
            display block
            width 100%
            height 44px
            border 1px solid #041014
            round(3px)
            background-clip padding-box
            &.twitter
              background-color #07749e
              box-shadow 0 2px 2px rgba(0,0,0,.1), inset 0 1px 0 rgba(255,255,255,.16)
              background linear-gradient(bottom, #07749e 0%, #0594cb 35%, #00abed 100%)
              transition(background 1000ms)
              &:hover
                background linear-gradient(bottom, #07749e 0%, #169bce 35%, #12b5f4 100%)
              &:active
                box-shadow 0 1px 0 rgba(255,255,255,.15), inset 0 1px 2px #094a63
                background linear-gradient(bottom, #0b93c7 0%, #0594cb 65.26%, #07749e 100%)
              .icon
                background: url('login/login_twitter@2x.png') no-repeat 0 1px
                background-size 14%
                padding 0 0 0 30px
            &.facebook
              background-color #233967
              box-shadow 0 2px 2px rgba(0,0,0,.1), inset 0 1px 0 rgba(255,255,255,.16)
              background linear-gradient(bottom, #233967 0%, #2c467b 34.74%, #3b5da6 100%)
              transition(background 1000ms)
              &:hover
                background linear-gradient(bottom, #233967 0%, #324d87 35%, #4565a8 100%)
              &:active
                box-shadow 0 1px 0 rgba(255,255,255,.1), inset 0 1px 2px rgba(20,32,58,.78)
                background linear-gradient(bottom, #284686 0%, #2c467b 65.26%, #233967 100%)
              .icon
                background: url('login/login_facebook@2x.png') no-repeat 0 0
                background-size 5%
                padding 0 0 0 15px

    .bottom_helper_links
      margin 15px 0
      a
        color #4a535b
        font-size 11px
        text-decoration none
