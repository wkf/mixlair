#mix ul
  position: relative

.track
  position: relative
  clear: both
  height: 80px
  box-shadow: 0px 1px 0px #292c30
  cursor: pointer

  svg rect
    fill rgba(255, 255, 255, 0.5)

  > *
    box-sizing: border-box

  .info
    padding: 15px
    background: #23262a
    width: 300px
    height: 80px
    fixed: left
    z-index: 100
    border-top: 1px solid #292c30
    box-shadow: 0px 0 1px rgb(15, 15, 17)
    z-index: 200

  &.add-track
    height: 40px
    .info
      padding: 15px 20px 12px 10px;
      .add-track
        width 144px
        height 26px
        border 1px solid #1a1c1f
        round(2px)
        background-clip padding-box
        box-shadow 0 1px 1px rgba(23,26,28,.25), inset 0 1px 0 rgba(255,255,255,.05)
        background linear-gradient(bottom, #212426 0%, #282b2f 100%)
        text-align center
        line-height 26px
        font-weight bold
        color rgb(102, 102, 102)
        font-size 13px
        margin 0 auto 10px auto
        &:hover
          box-shadow 0 1px 2px rgba(23,26,28,.35), inset 0 1px 0 rgba(255,255,255,.1)
          background linear-gradient(bottom, #212426 0%, #2c2f33 100%)
        &:active
          box-shadow 0 1px 0 rgba(255,255,255,.05), inset 0 0 0 1px rgba(16,18,20,.25)
          background linear-gradient(bottom, #212427 0%, #1e2124 100%)

  &.active .info
    background: rgb(33, 35, 37)

  .track-title
    font-size: 14px
    font-weight: 500
    color: rgba(#a0a9b4, 0.4)
    transition(200ms)

  &.active .track-title
    color: rgb(190, 190, 190)
  .waveform
    position: absolute
    left: 310px
    height: 90%
    top: 5%

  .region
    border-radius 8px
    background-clip padding-box
    background-color #0f1013
    box-shadow 0 1px 0 rgba(255,255,255,.04)
    position: relative
    gradient: #4d5359 #373a41
    height: 100%
    position: absolute

  &.active .region
    gradient #e04737, #cb301f

  &.active .region.active
    gradient lighten(#e04737, 20%), lighten(#cb301f, 20%)

  .title
    border-radius 8px
    position: absolute
    top: 5px
    left: 5px
    padding: 4px
    font-size: 10px
    background: #1d2023

  &.active .title
    color: rgba(255, 255, 255, 0.59)

  .gain-control
    background: #1e1e20 url('ui/vol_single_row_faded@2x.png') no-repeat
    background-size: 100px 14px
    size: 100 12
    rounded()
    box-shadow: inset 0 2px 5px rgba(#000,.3)
    background-position: 0 -1px
    position: relative
    margin-top: 24px
    float: left

    .alt
      background: url('ui/vol_single_row_color@2x.png') no-repeat
      height: 12px
      absolute: top
      background-size: 100px 12px
      width: 100%
      rounded()

    .ui-slider-handle
      size: 14px
      gradient: #fafbfb #a1a9b1
      box-shadow: 0 1px 3px rgba(#000,.8)
      display: block
      rounded()
      margin-top: -1px
      position: absolute
      margin-left: -7px

  .track-buttons
    box-shadow: 0 0px 1px rgba(0, 0, 0, 0.08)
    group()
    float: right
    margin-top: 33px

    & > div
      border: 1px solid #1b1c1f
      padding: 8px 15px
      float: left
      cursor: pointer
      background-position: center center
      background-repeat: no-repeat

    & > div:first-child
      border-radius: 2px 0 0 2px
      border-right: none;

    & > div:last-child
      border-left: none;
      border-radius: 0 2px 2px 0

    .fx
      background-image: url('ui/fx@2x.png'), linear-gradient(top, #26292d, #222528)
      background-size: 11px 12px, 100%

      &:hover
        background-image: url('ui/fx@2x.png'), linear-gradient(top, lighten(#26292d, 3%), lighten(#222528, 3%))

      &.active
        background: url('ui/fx_active_orb@2x.png') no-repeat bottom center, url('ui/fx@2x.png') no-repeat center center
        background-size: 50%, 11px 12px

    .mute
      background: url('ui/mute@2x.png') no-repeat center center, linear-gradient(top, #26292d, #222528)
      background-size: 12px 13px

      &:hover
        background-image: url('ui/mute@2x.png'), linear-gradient(top, lighten(#26292d, 3%), lighten(#222528, 3%))

      &.active
        background: url('ui/fx_active_orb@2x.png') no-repeat bottom center, url('ui/mute@2x.png') no-repeat center center
        background-size: 50%, 12px 13px
    .solo
      background-image: url('ui/play_solo@2x.png'), linear-gradient(top, #26292d, #222528)
      background-size: 14px 12px, 100%

      &:hover
        background-image: url('ui/play_solo@2x.png'), linear-gradient(top, lighten(#26292d, 3%), lighten(#222528, 3%))

      &.active
        background: url('ui/fx_active_orb@2x.png') no-repeat bottom center, url('ui/play_solo@2x.png') no-repeat center center
        background-size: 50%, 14px 12px

